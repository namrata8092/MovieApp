<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Poster_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Original_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Overview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="favorite">
        <item name="android:layout_width">@dimen/favorite_icon_width</item>
        <item name="android:layout_height">@dimen/favorite_icon_height</item>
        <item name="android:background">@mipmap/ic_launcher</item>
    </style>

    <style name="reviewAuthor" parent="Title">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="reviewContent" parent="Title">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
</resources>
